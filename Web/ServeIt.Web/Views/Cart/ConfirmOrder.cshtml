<div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0 ">
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">

            <div class="section-title">

                <p>Confirm Order</p>
            </div>
        </div>


        <div class="container "  data-aos="fade-up">

            <div class="mt-5 ">

                <div class="cols-lg-4">
                    <div class="info">
                        <div class="row">
                            <div class="phone col-sm">
                                <i class="bi bi-person"></i>
                                <h4>Full Name:</h4>
                                <p>@Model.FullName </p>
                            </div>

                            <div class=" phone col-sm">
                                <i class="bi bi-envelope"></i>
                                <h4>Email:</h4>
                                <p>
                                    @Model.Email
                                </p>

                            </div>
                            <div class="phone col-sm">
                                <i class="bi bi-phone"></i>
                                <h4>Phone Number:</h4>
                                <p>@Model.Phone</p>
                            </div>
                        </div>


                        <div class="row">
                            @foreach(var restaurant in @Model.Restaurants)
                            {
                            <div class="phone col-sm ">
                                <i class="bi bi-geo-alt"></i>
                                <h4>From: @restaurant.Name</h4>
                                <p>@restaurant.Address</p>
                            </div>
                            }
                        </div>
                    

                        <div class="phone col">

                            <i class="bi bi-geo-alt"></i>
                            <h4>To:</h4>
                            <div class="row">
                                <form asp-action="FinishOrder" asp-controller="Cart" asp-route-id=@ViewData["UserId"]  method="post" role="form" class="php-email-form " data-aos="fade-up" data-aos-delay="100">
                                    <div class="col-lg-10 col-md-20 form-group">
                                        <input type="text" class="form-control" placeholder="Street Name..." name="StreetName">
                                    </div>
                                    <div class="row">

                                        <div class="phone col-sm ">
                                            <i class="bi bi-currency-dollar"></i>   
                                            <h4>Total:</h4>
                                            <p> @Model.TotalAmount$</p>
                                        </div>

                                    </div>
                                    <br />
                                    <div class="text-center"><button type="submit">Confirm Order</button></div>

                                </form>
                            </div>
                         


                        </div>

                    </div>

            </div>


        </div>

    </div>
    <br />

</section>
</div>
