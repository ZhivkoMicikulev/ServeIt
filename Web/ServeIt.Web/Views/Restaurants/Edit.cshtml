
@model ServeIt.Web.ViewModels.Restaurants.EditRestaurantViewModel


@using ServeIt.Web.ViewModels.Restaurants
<br />
<br />

<br />



<section id="specials" class="specials">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Restaurant </h2>
            <p>Properties</p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-3">
                <ul class="nav nav-tabs flex-column">
                    <li class="nav-item">
                        <a class="nav-link active show" data-bs-toggle="tab" href="#tab-1">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#tab-2">Reservations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#tab-3">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#tab-4">Information</a>
                    </li>

                </ul>
            </div>


            <div class="col-lg-9 mt-4 mt-lg-0">
                <div class="tab-content">
                    <div class="tab-pane active show" id="tab-1">
                        <div class="row">
                            <section id="menu" class="menu section-bg">
                                <div class="row" data-aos="fade-up" data-aos-delay="100">
                                    <div class="col-lg-12 d-flex justify-content-center">
                                        <ul id="menu-flters">
                                            <li data-filter="*" class="filter-waiting">Waiting</li>
                                            <li data-filter=".filter-ready">ready</li>
                                        </ul>
                                    </div>
                                </div>

                                <div id="orders" class="row menu-container" data-aos="fade-up" data-aos-delay="200">
                                  
                                </div>


                            </section>


                        </div>
                    </div>

                    <div class="tab-pane " id="tab-3">
                        <div class="row">

                            <section id="menu" class="menu section-bg">

                                <div class="row" data-aos="fade-up" data-aos-delay="100">
                                    <div class="col-lg-12 d-flex justify-content-center">

                                        <a style="font-family:Playfair Display , serif;" asp-action="Add" asp-controller="Menus" asp-route-id="@Model.RestaurantId">Add Dish</a>

                                    </div>
                                </div>
                                <br />
                                <br />

                                <div class="row" data-aos="fade-up" data-aos-delay="100">
                                    <div class="col-lg-12 d-flex justify-content-center">
                                        <ul id="menu-flters">
                                            <li data-filter="*" class="filter-active">All</li>
                                            @foreach (var category in Model.MenuCategories)
                                            {
                                                <li data-filter=".filter-@category">@category</li>

                                            }

                                        </ul>
                                    </div>
                                </div>

                                <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
                                    @foreach (var dish in Model.Dishes)
                                    {
                                        <div class="col-lg-6 menu-item filter-@dish.CategoryName">
                                            <div class="menu-content">
                                                <a asp-action="Edit" asp-controller="Menus" asp-route-id=@dish.Id>@dish.Name</a><span>$@dish.Price</span>

                                            </div>

                                            <div class="menu-ingredients">
                                                <p class="col-sm-8"> @dish.Ingredients</p>

                                            </div>

                                        </div>


                                    }
                                </div>


                            </section>


                        </div>
                    </div>


                    <div class="tab-pane " id="tab-4">
                        <div class="row">
                            <section id="contact" class="contact">
                                <div class="container" data-aos="fade-up">

                                    <div class="section-title">
                                        <h2>@Model.RestaurantInfo.RestaurantName</h2>
                                        <p>Contact Us</p>
                                    </div>
                                </div>


                                <div class="container" data-aos="fade-up">

                                    <div class="row mt-5">

                                        <div class="col-lg-4">
                                            <div class="info">
                                                <div class="address">
                                                    <i class="bi bi-geo-alt"></i>
                                                    <h4>Location:</h4>
                                                    <p>@Model.RestaurantInfo.Address</p>
                                                </div>

                                                <div class="open-hours">
                                                    <i class="bi bi-info"></i>
                                                    <h4>About us:</h4>
                                                    <p>
                                                        @Model.RestaurantInfo.About
                                                    </p>
                                                </div>

                                                <div class="email">
                                                    <i class="bi bi-envelope"></i>
                                                    <h4>Email:</h4>
                                                    <p>@Model.RestaurantInfo.Email</p>
                                                </div>

                                                <div class="phone">
                                                    <i class="bi bi-phone"></i>
                                                    <h4>Call:</h4>
                                                    <p>@Model.RestaurantInfo.PhoneNumber</p>
                                                </div>

                                            </div>

                                        </div>


                                    </div>

                                </div>
                                <div class="btns">
                                    <a asp-action="EditInfo" asp-controller="Restaurants" asp-route-id=@Model.RestaurantId class="btn-menu animated fadeInUp scrollto">Edit</a>
                                </div>
                            </section>



                        </div>
                    </div>





                </div>

            </div>
        </div>

    </div>

</section>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script>

         $.get('/api/getOrders/@Model.RestaurantId', (data) =>
    {
             var a = document.getElementById("orders");
             console.log(a);
        for (var i = 0; i < data.length; i++)
        {
            var type;
            if (data[0].isItPayed==false) {
                type = 'waiting';
            }
            else {
                type = 'done';
            }
            $("#orders").append(
                '<div class="col-lg-6 menu-item filter-' + type + '">'
                + '<div class="menu-content">'
                +'<a href="/Orders/OrderedItems/'+ data[i].orderId + '"  > Order: ' + data[i].orderId + '</a>'
                + '<span>' + (data[i].amount).toFixed(2) + '$</span>'
                + '</div>'
                + ' <div class="menu-ingredients">'
                + '<p class="col-sm-8">Name: ' + data[i].fullName +'</p>'
                + '<p class="col-sm-8">Phone: '+data[i].phone+'</p>'
                + '<p class="col-sm-8">Street: ' + data[i].street+'</p>'
                + '<p class="col-sm-8">Email: ' + data[i].email +'<p>'
                + '<p class="col-sm-8">Date: ' + data[i].date + '<p>'
                + ' <p class="col-sm-8">Hour: ' + data[i].hour + '<p>'
                + '</div>'
                + '</div>' );
        }

    })








</script>







